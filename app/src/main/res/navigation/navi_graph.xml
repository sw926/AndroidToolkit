<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sw926.toolkitdemo.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_fullScreenFragment"
            app:destination="@id/fullScreenFragment" />
        <action
            android:id="@+id/action_homeFragment_to_statsVisiblityFragment"
            app:destination="@id/statsVisiblityFragment" />
        <action
            android:id="@+id/action_homeFragment_to_transStatsActivity"
            app:destination="@id/transStatsActivity" />
    </fragment>
    <fragment
        android:id="@+id/fullScreenFragment"
        android:name="com.sw926.toolkitdemo.FullScreenFragment"
        android:label="Full Screen"
        tools:layout="@layout/fragment_full_screen" />
    <fragment
        android:id="@+id/statsVisiblityFragment"
        android:name="com.sw926.toolkitdemo.StatsVisibilityFragment"
        android:label="fragment_stats_visiblity"
        tools:layout="@layout/fragment_stats_visibility" />
    <activity
        android:id="@+id/transStatsActivity"
        android:name="com.sw926.toolkitdemo.TransStatsActivity"
        android:label="activity_trans_stats"
        tools:layout="@layout/activity_trans_stats" />

</navigation>